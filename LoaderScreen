local RunService = game:GetService("RunService")

-- Create a model for the cube
local cube = Instance.new("Model")
cube.Name = "WireCube"
cube.Parent = workspace

local size = 4                 -- cube size
local thickness = 0.05         -- line thickness
local color = Color3.fromRGB(0, 77, 255) -- neon blue like CSS

-- 12 cube edges (start â†’ end)
local edges = {
    -- bottom square
    {Vector3.new(-1,-1,-1), Vector3.new(1,-1,-1)},
    {Vector3.new(1,-1,-1), Vector3.new(1,-1,1)},
    {Vector3.new(1,-1,1), Vector3.new(-1,-1,1)},
    {Vector3.new(-1,-1,1), Vector3.new(-1,-1,-1)},

    -- top square
    {Vector3.new(-1,1,-1), Vector3.new(1,1,-1)},
    {Vector3.new(1,1,-1), Vector3.new(1,1,1)},
    {Vector3.new(1,1,1), Vector3.new(-1,1,1)},
    {Vector3.new(-1,1,1), Vector3.new(-1,1,-1)},

    -- vertical edges
    {Vector3.new(-1,-1,-1), Vector3.new(-1,1,-1)},
    {Vector3.new(1,-1,-1), Vector3.new(1,1,-1)},
    {Vector3.new(1,-1,1), Vector3.new(1,1,1)},
    {Vector3.new(-1,-1,1), Vector3.new(-1,1,1)},
}

local parts = {}

local function createEdge(a, b)
    local p = Instance.new("Part")
    p.Anchored = true
    p.CanCollide = false
    p.Material = Enum.Material.Neon
    p.Color = color
    p.Size = Vector3.new(thickness, thickness, (b - a).Magnitude)
    p.CFrame = CFrame.new(a, b) * CFrame.new(0, 0, -((b - a).Magnitude / 2))
    p.Parent = cube
    table.insert(parts, p)
end

-- Build all edges
for _, edge in ipairs(edges) do
    createEdge(edge[1] * size, edge[2] * size)
end

-- Rotation angles
local angleX = 0
local angleY = 0
local angleZ = 0

-- Animate cube
RunService.RenderStepped:Connect(function(dt)
    angleX += math.rad(180) * dt * 2     -- fast X rotation
    angleY += math.rad(360) * dt * 1.5   -- faster Y rotation
    angleZ += math.rad(90) * dt * 1      -- slow Z rotation

    local rot = CFrame.Angles(angleX, angleY, angleZ)

    for i, edge in ipairs(edges) do
        local a = (edge[1] * size)
        local b = (edge[2] * size)

        local pa = rot:PointToWorldSpace(a)
        local pb = rot:PointToWorldSpace(b)

        local p = parts[i]
        p.CFrame = CFrame.new(pa, pb) * CFrame.new(0, 0, -((pb - pa).Magnitude / 2))
        p.Size = Vector3.new(thickness, thickness, (pb - pa).Magnitude)
    end
end)
