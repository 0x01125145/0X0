local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local gui = Instance.new("ScreenGui")
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Name = "Cube4DLoader"
gui.Parent = playerGui

local bg = Instance.new("Frame", gui)
bg.Size = UDim2.fromScale(1,1)
bg.BackgroundColor3 = Color3.fromRGB(5,5,5)

local cube = Instance.new("Frame", bg)
cube.AnchorPoint = Vector2.new(0.5,0.5)
cube.Position = UDim2.fromScale(0.5,0.5)
cube.Size = UDim2.new(0,180,0,180)
cube.BackgroundTransparency = 1

local stroke = Instance.new("UIStroke", cube)
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(120,255,200)
stroke.Transparency = 0.2

local corner = Instance.new("UICorner", cube)
corner.CornerRadius = UDim.new(0,4)

local function spin(axis, duration)
    local tween = TweenService:Create(
        cube,
        TweenInfo.new(duration, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1),
        {Rotation = axis}
    )
    tween:Play()
end

spin(360, 1.2)
task.delay(0.1, function() spin(-360, 1.4) end)
task.delay(0.2, function() spin(720, 2.2) end)
