-- 6. Triâ€‘Shard Fade
---------------------------------------------------------------------
local function TriShard()
    local gui = Instance.new("ScreenGui", playerGui)
    gui.IgnoreGuiInset = true

    local bg = Instance.new("Frame", gui)
    bg.Size = UDim2.fromScale(1,1)
    bg.BackgroundColor3 = Color3.fromRGB(5,5,5)

    local shards = {}
    for i = 1, 3 do
        local s = Instance.new("Frame", bg)
        s.AnchorPoint = Vector2.new(0.5,0.5)
        s.Position = UDim2.fromScale(0.5,0.45)
        s.Size = UDim2.new(0,60,0,60)
        s.BackgroundColor3 = Color3.fromRGB(120,255,200)
        s.BackgroundTransparency = 0.8
        s.BorderSizePixel = 0
        s.Rotation = (i-1)*120
        table.insert(shards, s)
    end

    task.spawn(function()
        while gui.Parent do
            for _,s in ipairs(shards) do
                TweenService:Create(s, TweenInfo.new(0.5), {BackgroundTransparency = 0.4}):Play()
                task.wait(0.3)
                TweenService:Create(s, TweenInfo.new(0.5), {BackgroundTransparency = 0.8}):Play()
            end
        end
    end)

    task.wait(5)
    Clear(gui)
end

---------------------------------------------------------------------
-- 7. Starfield Drift
---------------------------------------------------------------------
local function Starfield()
    local gui = Instance.new("ScreenGui", playerGui)
    gui.IgnoreGuiInset = true

    local bg = Instance.new("Frame", gui)
    bg.Size = UDim2.fromScale(1,1)
    bg.BackgroundColor3 = Color3.fromRGB(5,5,10)

    local function spawnStar()
        local s = Instance.new("Frame", bg)
        s.Size = UDim2.new(0,2,0,2)
        s.Position = UDim2.new(math.random(),0, -0.1,0)
        s.BackgroundColor3 = Color3.fromRGB(120,255,200)
        s.BackgroundTransparency = 0.2
        s.BorderSizePixel = 0

        TweenService:Create(s, TweenInfo.new(4, Enum.EasingStyle.Linear), {
            Position = UDim2.new(s.Position.X.Scale,0,1.1,0),
            BackgroundTransparency = 1
        }):Play()

        task.delay(4, function() s:Destroy() end)
    end

    task.spawn(function()
        while gui.Parent do
            spawnStar()
            task.wait(0.05)
        end
    end)

    task.wait(5)
    Clear(gui)
end

---------------------------------------------------------------------
-- 8. Haze Bloom
---------------------------------------------------------------------
local function HazeBloom()
    local gui = Instance.new("ScreenGui", playerGui)
    gui.IgnoreGuiInset = true

    local bg = Instance.new("Frame", gui)
    bg.Size = UDim2.fromScale(1,1)
    bg.BackgroundColor3 = Color3.fromRGB(5,5,5)

    local haze = Instance.new("Frame", bg)
    haze.AnchorPoint = Vector2.new(0.5,0.5)
    haze.Position = UDim2.fromScale(0.5,0.45)
    haze.Size = UDim2.new(0,200,0,200)
    haze.BackgroundColor3 = Color3.fromRGB(120,255,200)
    haze.BackgroundTransparency = 0.9
    haze.BorderSizePixel = 0

    local corner = Instance.new("UICorner", haze)
    corner.CornerRadius = UDim.new(0,999)

    task.spawn(function()
        while gui.Parent do
            TweenService:Create(haze, TweenInfo.new(1.5), {Size = UDim2.new(0,260,0,260), BackgroundTransparency = 0.8}):Play()
            task.wait(1.5)
            TweenService:Create(haze, TweenInfo.new(1.5), {Size = UDim2.new(0,200,0,200), BackgroundTransparency = 0.9}):Play()
            task.wait(1.5)
        end
    end)

    task.wait(5)
    Clear(gui)
end

---------------------------------------------------------------------
-- Showcase Controller
---------------------------------------------------------------------

local animations = {
    NebulaDrift,
    PrismBeam,
    CircuitNode,
    SoftGrid,
    PulseLine,
    TriShard,
    Starfield,
    HazeBloom
}

for _,anim in ipairs(animations) do
    anim()
end
