SettingsTab:CreateButton({
	Name = "Rejoin Server",
	Callback = function()
		_G.Notify.Warning("Rejoining", "Teleporting to new server...")
		task.wait(1)
		game:GetService("TeleportService"):Teleport(game.PlaceId, player)
	end
})

