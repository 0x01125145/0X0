-- ========================================
-- MAIN TAB
-- ========================================

MainTab:CreateSection("Player Movement")

MainTab:CreateSlider({
	Name = "WalkSpeed",
	Min = 16,
	Max = 200,
	Default = 16,
	Increment = 1,
	Callback = function(value)
		local character = player.Character
		if character and character:FindFirstChild("Humanoid") then
			character.Humanoid.WalkSpeed = value
			_G.Notify.Success("WalkSpeed", "Set to " .. value)
		end
	end
})

MainTab:CreateSlider({
	Name = "JumpPower",
	Min = 50,
	Max = 300,
	Default = 50,
	Increment = 5,
	Callback = function(value)
		local character = player.Character
		if character and character:FindFirstChild("Humanoid") then
			character.Humanoid.JumpPower = value
			_G.Notify.Success("JumpPower", "Set to " .. value)
		end
	end
})

MainTab:CreateToggle({
	Name = "Infinite Jump",
	Default = false,
	Callback = function(enabled)
		_G.InfiniteJump = enabled
		if enabled then
			_G.Notify.Success("Infinite Jump", "Enabled")
		else
			_G.Notify.Warning("Infinite Jump", "Disabled")
		end
	end
})

